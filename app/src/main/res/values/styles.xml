<resources>


    <!-- Select to account bottom sheet-->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>



    <declare-styleable name="LoopingViewPager">
        <attr name="isInfinite" format="boolean" />
        <attr name="autoScroll" format="boolean" />
        <attr name="wrap_content" format="boolean" />
        <attr name="scrollInterval" format="integer" />
        <attr name="viewpagerAspectRatio" format="float" />
        <attr name="itemAspectRatio" format="float" />
    </declare-styleable>

    <color name="shadow_view_default_shadow_color">#DCDDE0</color>
    <color name="shadow_view_foreground_color_dark">#1f000000</color>
    <color name="shadow_view_foreground_color_light">#33ffffff</color>

    <declare-styleable name="ShadowView">
        <attr name="android:foreground" />
        <attr name="shadowMargin" format="dimension" />
        <attr name="shadowMarginTop" format="dimension" />
        <attr name="shadowMarginLeft" format="dimension" />
        <attr name="shadowMarginRight" format="dimension" />
        <attr name="shadowMarginBottom" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="cornerRadiusTL" format="dimension" />
        <attr name="cornerRadiusTR" format="dimension" />
        <attr name="cornerRadiusBL" format="dimension" />
        <attr name="cornerRadiusBR" format="dimension" />
        <attr name="foregroundColor" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowDx" format="float" />
        <attr name="shadowDy" format="float" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ShadowView_Layout">
        <attr name="layout_gravity_view">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>

</resources>